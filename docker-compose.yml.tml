version: "3.3"
services:    
  es1:
    build: mkelasticsearch
    image: mkelasticsearch
    container_name: es1
    volumes:
      - ./data/esdata1:/usr/share/elasticsearch/data
      - ./elasticsearch.yml:/usr/share/elasticsearch/config/elasticsearch.yml
      - ./data/snapshot:/etc/snapshots
    environment:
      - node.name=es1
      - node.data=true
      - node.master=true
     # - discovery.seed_hosts=es3,es2              # Configure these lines according to clustering requirements
     # - cluster.initial_master_nodes=es1,es2,es3
      - "ES_JAVA_OPTS=-Xms8g -Xmx8g"
      - ES_HEAP_SIZE=8g
    ulimits:
      memlock:
        soft: -1
        hard: -1
    ports:
      - "9300:9300"
      - "9200:9200"
    networks:
      - elastic
    restart: unless-stopped

